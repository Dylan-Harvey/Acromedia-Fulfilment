function commerce_fulfillment_manipulate_entity_form_submit($form, &$form_state) {

  if (isset($form_state['values']['commerce_fulfillment_shipment_id'])) {

    //loads shipment
    $shipment_id = $form_state['values']['commerce_fulfillment_shipment_id'];
    $shipment = entity_load('commerce_fulfillment_shipment', FALSE, array('shipment_id' => $shipment_id));

    //gets the argument to add/remove from the shipment
    $argument = commerce_fulfillment_get_array($form_state['values']['commerce_fulfillment_order_id'], $form_state['values']['commerce_fulfillment_package'], 'package_in_order');

    //sets the wrapper and field variable to what we need if we are manipulating a shipment
    $wrapper = entity_metadata_wrapper('commerce_fulfillment_shipment', $shipment[$shipment_id]);
    $field = 'commerce_fulfillment_packages';
    $type2 = 'Shipment';
    $id = $shipment_id;
    $type1 = 'Package';

    //checks if there is a package with the argument ID
    $p_array = $wrapper->commerce_fulfillment_packages->value();
  }
  else {

    //loads the package entity
    $order_id = $form_state['values']['commerce_fulfillment_order_id'];
    $package_id[0] = $form_state['values']['commerce_fulfillment_package_id'];
    $package = entity_load('commerce_fulfillment_package', $package_id, array('order_id' => $order_id));

    //sets the wrapper and field variable to what we need if we are manipulating a shipment
    $wrapper = entity_metadata_wrapper('commerce_fulfillment_package', $package[$package_id[0]]);
    $field = 'commerce_fulfillment_line_items';
    $type2 = 'Package';
    $id = $package_id[0];
    $type1 = 'Product';

    //creates an array of line_items in the specific package.
    $p_array = array();
    foreach ($wrapper->commerce_fulfillment_line_items->value() as $line_item) {
      $p_array[] = $line_item;
    }

    $argument = commerce_fulfillment_get_array($order_id, $form_state['values']['commerce_fulfillment_product'], 'commerce_order');

  }

  //add a product to a package
  if ($form_state['values']['commerce_fulfillment_radios'] == 0) {
    $count = 0;
    if (isset($p_array)) {

      foreach ($p_array as $p_id) {

        if (isset($p_id->type)) {
          $line_item = entity_metadata_wrapper('commerce_line_item', $p_id);
          $p_id = $line_item->line_item_id->value();
        }
        else{
          $package = entity_metadata_wrapper('commerce_fulfillment_package', $p_id);
          $p_id = $package->package_id->value();
        }
        if($p_id == $argument){
          $count++;
          drupal_set_message(t('@type1 @argument is already in @type2 @id.', array('@type1' => $type1, '@type2' => $type2, '@argument' => $argument, '@id' => $id)), 'error');
        }
      }
    }

    if ($count == 0) {
      if(isset($wrapper->{$field}->value()[0])){
        if($type2 == 'Shipment'){
          $id2 = $argument;
          $argument = entity_load('commerce_fulfillment_package', FALSE, array('package_id' => $argument));
          $argument_wrapper = entity_metadata_wrapper('commerce_fulfillment_package', $argument[$id2]);
          $argument = $argument[$argument_wrapper->package_id->value()];
        }
        $wrapper->{$field}[] = $argument;
      }
      else{

        if($type2 == 'Shipment'){
          $id2 = $argument;
          $argument = entity_load('commerce_fulfillment_package', FALSE, array('package_id' => $argument));
          $argument_wrapper = entity_metadata_wrapper('commerce_fulfillment_package', $argument[$id2]);
          $argument = $argument[$argument_wrapper->package_id->value()];
        }
        $wrapper->{$field}[] = $argument;
      }

      $wrapper->save();
    }
  }
  //remove a product from a package
  elseif($form_state['values']['commerce_fulfillment_radios'] == 1) {
    $count = 0;
    $success_count = 0;

    foreach ($p_array as $index) {

      if(isset($index->type)) {
        $line_item = entity_metadata_wrapper('commerce_line_item', $index);
        $index = $line_item->line_item_id->value();
        $type1 = 'Product';
      }
      else{
        $package_wrapper = entity_metadata_wrapper('commerce_fulfillment_package', $index);
        $index = $package_wrapper->package_id->value();
        $id = $shipment_id;
        $type1 = 'Package';
      }

      if ($index == $argument) {
        unset($wrapper->{$field}[$count]);
        $wrapper->save();
        drupal_set_message(t('@type1 @argument deleted from @type2 @id.', array('@type1' => $type1, '@type2' => $type2, '@argument' => $argument, '@id' => $id)));
        $success_count++;
      }
      $count++;
    }

    if($success_count == 0){

      drupal_set_message(t('@type1 @argument not found in @type2 @id.', array('@type1' => $type1, '@type2' => $type2, '@argument' => $argument, '@id' => $id)));
    }
  }
  //delete entity
  elseif($form_state['values']['commerce_fulfillment_radios']==2){
    $wrapper->delete();
    drupal_set_message(t('@type2 @id deleted.', array('@type2' => $type2, '@id' => $id)));
  }
}

/**
 * @param $order_id
 * @param $index
 * @param $type
 * @return array
 *
 * Creates an array of the necessary id type.
 * If there was an index chosen, returns the value of that index.
 * Otherwise just returns the array.
 */
function commerce_fulfillment_get_array($order_id, $index = 'false', $type){
  //@TODO - Turn this into a switch
  $id_array = array();
  //creates an array of products in a commerce order. Returns selected product if one chosen.
  if($type == 'commerce_order'){
    $entity_array = array();
    $entity_array[] = commerce_order_load($order_id);
  }
  //creates an array of products in a commerce order. Returns selected product if one chosen.
  elseif($type == 'package_in_order'){
    $entity_array = entity_load('commerce_fulfillment_package', FALSE, array('order_id' => $order_id));


    foreach($entity_array as $entity){
      $entity = entity_metadata_wrapper('commerce_fulfillment_package', $entity);
      $id_array[] = $entity->package_id->value();
    }
    if($index == 'false') {
      return $id_array;
    }
      return $id_array[$index];
  }
  elseif($type == 'shipment_in_order'){
    $entity_array = entity_load('commerce_fulfillment_shipment', FALSE, array('order_id' => $order_id));
    foreach($entity_array as $entity){
      $entity = entity_metadata_wrapper('commerce_fulfillment_shipment', $entity);
      $id_array[] = $entity->shipment_id->value();
    }
    if($index == 'false') {
      return $id_array;
    }
    else {
      return $id_array[$index];
    }
  }
  else {
    $entity_array = entity_load($type, FALSE, array('order_id' => $order_id));
  }

  foreach ($entity_array as $entity) {
    $entity = entity_metadata_wrapper($type, $entity);

    if (isset($entity->commerce_line_items)) {

      foreach ($entity->commerce_line_items->value() as $line_item) {
        $id_array[] = $line_item->line_item_id;
      }
    }
    elseif (isset($entity->commerce_fulfillment_line_items)) {

      foreach ($entity->commerce_fulfillment_line_items->value() as $line_item) {
        $id_array[] = $line_item->line_item_id;
      }
    }
  }

  if ($index == 'false') {
    return $id_array;
  }
  return $id_array[$index];

}
