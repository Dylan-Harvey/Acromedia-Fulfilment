<?php
/**
 * @return array
 * Implements hook hook_menu()
 *
 */
function Acro_menu() {
  $items = array();

    /**
     * Implements Acro tab on the admin menu
     */
  $items['admin/Acro'] = array(
      'title' => t('Acro'),
      'description' => t('A custom menu'),
      'page callback' => t('Orders_content'),
      'type' => MENU_NORMAL_ITEM,
      'access callback' => true,
      'weight' => 50
  );
    /**
     * Implements Orders link in the Acro module menu
     */
  $items['admin/Acro/Orders'] = array(
      'title' => t('Orders'),
      'description' => t('Orders tab'),
      'type' => MENU_DEFAULT_LOCAL_TASK,
      'weight' => 0
  );
    /**
     * Implements shipping link in the Acro module menu
     */
  $items['admin/Acro/Shipments'] = array(
      'title' => t('Shipments'),
      'description' => t('Shipments tab'),
      'page callback' => t('Shipments_content'),
      'type' => MENU_LOCAL_TASK,
      'access callback' => true,
      'weight' => 1
  );
    /**
     * Not complete
     * Attempt at referencing Commerce orders.
     * Currently allows to receive a blank page when the url localhost/Commerce/Acro/(any active order id) is entered
     */
  $items['admin/Acro/Orders/%commerce_order'] = array(
     'title' => 'Edit',
     'page callback' => 'commerce_order_ui_order_form_wrapper',
     'page arguments' => array(3),
     'access callback' => 'commerce_order_access',
     'access arguments' => array('update', 3),
     'type' => MENU_LOCAL_TASK,
     'weight' => -5,
     'context' => MENU_CONTEXT_PAGE | MENU_CONTEXT_INLINE,
     'file' => 'includes/commerce_order_ui.orders.inc',
   );
  return $items;
}

/**
 * @return string
 * Implements page when order tab is clicked
 */
function Orders_content() {
	return '<h2>'.t('Orders info').'</h2>';
}

/**
 * @return string
 * Implements page when shipment tab is clicked
 */
function Shipments_content() {
  return '<h2>'.t('Shipments info').'</h2>';
}

/**
 * @return array
 * implements hook hook_admin_paths
 * Allows the Acro tab to be placed in the admin menu
 */
function hook_admin_paths() {
  $paths = array(
    'Acro/*/add' => TRUE, 
    'Acro/*/edit' => TRUE,
  );
  return $paths;
}

/**
 * @return array
 * Implements hook hook_overlay_paths
 * Allows a page overlay to be opened once the Acro tab is clicked
 */
function hook_overlay_paths() {
  $paths = array(
    'Acro/*/add' => TRUE,
    'Acro/*/edit' => array(
      'width' => 500,
    ),
  );
  return $paths;
}


